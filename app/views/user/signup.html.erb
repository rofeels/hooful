<div id="hContainer">
	<div id="hBanner" class="signup">
		<div class="wrap">
			<div class="signin">
				<div class="description">
				후풀을 통해 가치있는 사람들과 활동을 나누세요.
				</div>
			</div>
		</div>
	</div>
	<% if flash[:notice] %>
	<div class="alert fade in alert-warning">
		<button class="close" data-dismiss="alert" type="button">×</button>
		<a class="close" data-dismiss="alert" href="#"></a><%=flash[:notice]%>
	</div>
	<% end %>
	<div class="wrap">
		<div id="cSignup">
			<div class="snsSignin">
				<%= link_to "Facebook 계정으로 로그인", "/auth/facebook", :class=>'signin btnFacebook'%>
				<%= link_to "Twitter 계정으로 로그인", "/auth/twitter", :class=>'signin btnTwitter'%>
			</div>
			<div></div>
			<div class="signinTitle">
				<div class="signDivider"></div>
			</div>
			<a href="/signup" class="emailSignup">이메일로 가입하기</a>
		</div>
	</div>
</div>