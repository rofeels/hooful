<div id="hContainer">
	<div id="review_write">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
			<h3> 메모 작성하기</h3>
		</div>
		<div class="modal-body">
			<fieldset>
				<form accept-charset="UTF-8" class="form-horizontal" enctype="multipart/form-data" id="hReviewfrm" method="post">
					<input id="hMethod" name="hMethod" type="hidden" value="generate" />
					<input id="mReviewCode" name="mReviewCode" type="hidden" value="" />
					<input id="mPicture" name="mPicture" type="hidden" value="noimage.png" />
					<input id="mPicturename" name="mPicturename" type="hidden" value="" />
					<dl data-toggle="tooltip" title="참가했던 활동을 선택해 주세요.">
						<% if session[:user_id] == "hooful@hooful.com" %>
							<dt>작성자</dt>
							<dd class="title">
							<input id="mWriter" name="mWriter" maxlength="25" type="text" value="<%=session[:user_id]%>" />
							</dd>
						<% else %>
							<input id="mWriter" name="mWriter" type="hidden" value="<%=session[:user_id]%>" />
						<% end %>
						<dt>언제?</dt>
						<dd class="title">
							<input id="mWhen" maxlength="25" name="mWhen" type="text" value="" />
						</dd>
						<dt>어디서?</dt>
						<dd class="title">
							<input id="mWhere" maxlength="25" name="mWhere" type="text" value="" />
						</dd>
						<dt>무엇을?</dt>
						<dd class="title">
							<input id="mWhat" maxlength="25" name="mWhat" type="text" value="" />
						</dd>
						<dt>활동후기 제목</dt>
						<dd class="title">
							<input id="mTitle" maxlength="25" name="mTitle" type="text" value="" />
						</dd>
						<dd class="detail">
							<textarea class="redactor" id="mContent" name="mContent"></textarea>
						</dd>
					</dl>
				</form>
			</fieldset>
		</div>
		<div class="modal-footer">
			<div class="btn_next complete sendReview">완료</div>
		</div>
	</div>
</div>